<% provide(:title, @instructor.name) %>


<% @Course_Instructor_infos.each do |t| %>
<% @course = Course.find_by(course_number: t.course_number) %>
<% if @course %>
    <div class="row">
    
        <section class="course_info">
            
          <h1><%= @course.course_number %></h1>
          
          <h2>Title: <%= @course.title %></h2>
          
          <h2>Description: <%= @course.description %></h2>
          
          <h2>Start_date: <%= @course.start_date %></h2>
          
          <h2>End_date: <%= @course.end_date %></h2>
          
          <h2>Status: <%= @course.status %></h2>
          
          <h2><%= link_to "Students", studentsincourse_info_path(course_number: @course.course_number), class: "btn btn-primary btn-lg" %>  <%= link_to "Material", coursematerial_info_path(course_number: @course.course_number), class: "btn btn-primary btn-lg" %></h2>
          
        </section>
        
    </div>
<% end %>
    
    <hr style="height:1px;border:none;border-top:1px solid #555555;" />
<% end %>

