<% provide(:title, "Search course") %>
<h1>Search course</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@course) do |f| %>
      <%= render 'shared/student_error_messages' %>

      <%= f.label :course_number %>
      <%= f.text_field :course_number, class: 'form-control' %>

      <%= f.label :Title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :Description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :Instructor %>
      <%= f.text_field :instructor, class: 'form-control' %>
      
      <%= f.label :Status %>
      <%= f.text_field :status, class: 'form-control' %>

      <%= f.submit "Search!", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>

<%= will_paginate %>

<ul class="courses">
      <%= render @courses %>
</ul>

<%= will_paginate %>