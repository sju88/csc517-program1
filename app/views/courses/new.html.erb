<% provide(:title, 'Sign up') %>
<h1>Create Course</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@course) do |f| %>
      <%= render 'shared/course_error_messages' %>

      <%= f.label :course_number %>
      <%= f.text_field :course_number, class: 'form-control' %>

      <%= f.label :Title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :Description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :Instructor %>
      <%= select_tag :instructor, options_from_collection_for_select(Instructor.all, 'id', 'name')%>
      
      <%= f.label :Start_date %>
      <%= f.date_field :start_date, class: 'form-control' %>
      
      <%= f.label :End_date %>
      <%= f.date_field :end_date, class: 'form-control' %>
      
      <%= f.label :status %>
      <%= f.select :status, options_for_select(['Active', 'Inactive']) %>

      <%= f.submit "Create course", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>